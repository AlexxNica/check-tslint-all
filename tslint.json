{
  "extends": ["tslint-react"],
  "rulesDirectory": ["node_modules/tslint-immutable/rules"],
  "rules": {
    "adjacent-overload-signatures": true,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "arrow-return-shorthand": [
      true
    ],
    "await-promise": false,
    "callable-types": true,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "cyclomatic-complexity": [
      true,
      20
    ],
    "eofline": true,
    "import-spacing": true,
    "indent": [
      true,
      "spaces"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "interface-over-type-literal": true,
    "jsdoc-format": false,
    "linebreak-style": [
      true,
      "LF"
    ],
    "match-default-export-name": false,
    "max-line-length": [
      true,
      120
    ],
    "newline-before-return": false,
    "new-parens": true,
    "no-angle-bracket-type-assertion": true,
    "no-any": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": [
      true,
      1
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-default-export": true,
    "no-duplicate-super": true,
    "no-duplicate-variable": true,
    "no-empty-interface": true,
    "no-eval": true,
    "no-for-in-array": true,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-internal-module": true,
    "no-mergeable-namespace": true,
    "no-namespace": true,
    "no-non-null-assertion": true,
    "no-null-keyword": false,
    "no-parameter-properties": false,
    "no-unbound-method": false, // e.g. problematic with composing JSON.parse, Object.keys, etc.
    "no-reference": true,
    "no-reference-import": true,
    "no-require-imports": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-initializer": true,
    "no-unnecessary-qualifier": true,
    "no-unsafe-any": false,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-unused-variable": [true, "react"],
    "no-use-before-declare": false, // TODO: variable 'undefined' used before declaration
    "no-var-keyword": true,
    "no-var-requires": true,
    "no-void-expression": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-shorthand": true,
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace"
    ],
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "ordered-imports": [
      true
    ],
    "prefer-const": true,
    "prefer-for-of": true,
    "prefer-function-over-method": true,
    "prefer-method-signature": true,
    "prefer-template": true,
    "quotemark": [
      true,
      "single",
      "jsx-single",
      "avoid-escape"
    ],
    "restrict-plus-operands": false,
    "semicolon": [
      true,
      "never"
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "asyncArrow": "always",
        "constructor": "never",
        "method": "never",
        "named": "never"
      }
    ],
    "strict-boolean-expressions": true,
    "strict-type-predicates": false,
    "switch-default": true,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef": [
      true,
      "call-signature"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "typeof-compare": true,
    "unified-signatures": true,
    "use-isnan": true,
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "allow-trailing-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type"
    ],

    // tslint-immutable
    "no-let": true,
    "readonly-interface": true,
    "readonly-indexer": true,
    "readonly-array": true,

    // tslint-react
    "jsx-alignment": false,
    "jsx-curly-spacing": [
      true,
      "always"
    ],
    "jsx-no-lambda": true,
    "jsx-no-multiline-js": false,
    "jsx-no-string-ref": true,
    "jsx-self-close": true,
    "jsx-use-translation-function": false,
    "jsx-wrap-multiline": false
  }
}
